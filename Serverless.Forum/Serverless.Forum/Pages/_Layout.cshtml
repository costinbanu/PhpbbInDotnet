@using System.Web
@using  Serverless.Forum.Contracts
@using Serverless.Forum.Utilities
@using Microsoft.EntityFrameworkCore

@inject Services.UserService  _userService
@inject ForumDb.ForumDbContext _context

@{
    var currentUser = await _userService.ClaimsPrincipalToLoggedUserAsync(User);
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, minimum-scale=1, maximum-scale=1" />
    <title>@Constants.FORUM_NAME - @ViewData["Title"]</title>

        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="~/css/site.css" />

    <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/cookieconsent@3/build/cookieconsent.min.css" />

    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <script src='https://www.google.com/recaptcha/api.js'></script>
    <script src="~/js/site.js"></script>
    <script src="~/js/dateFormatter.js"></script>
</head>
<body>
    <nav class="navbar navbar-inverse navbar-fixed-top" id="topBanner">
        <div class="container size1300">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a asp-page="/Index"><div class="headerImg"></div></a>

            </div>
            <div class="navbar-collapse collapse">
                <form action="/Login" method="get" name="loginForm">
                    <input name="ReturnUrl" type="hidden" value="@HttpUtility.UrlEncode(Context.Request.Path + Context.Request.QueryString)" />
                </form>
                <form action="/Logout" method="get" name="logoutForm">
                    <input name="ReturnUrl" type="hidden" value="@HttpUtility.UrlEncode(Context.Request.Path + Context.Request.QueryString)" />
                </form>
                <ul style="float:right; padding-top:10px; list-style:none; line-height:1.85em;">
                    @{
                        var isTopic = ViewContext.RouteData.Values["page"].ToString() == "/ViewTopic";
                        if (string.IsNullOrWhiteSpace(currentUser?.Username) || (currentUser?.UserId ?? 1) == 1)
                        {
                            <li><a href="javascript:loginForm.submit()">Login</a></li>
                            <li><a asp-page="/Register">Register</a></li>
                        }
                        else
                        {
                            <li><a asp-page="/User" asp-route-UserId="@currentUser.UserId">Contul meu [@currentUser.Username]</a></li>
                            <li><a href="javascript:logoutForm.submit()">Logout</a></li>
                        }

                        <li>
                            <a asp-page="/Search" asp-route-QueryString="@HttpUtility.UrlEncode(Context.Request.QueryString.ToString())">
                                Caută în @(isTopic ? "subiect" : "forum") &#x1F50E;
                            </a>
                        </li>
                    }
                </ul><br /> <br />
            </div>
        </div>
    </nav>
    <div class="container body-content size1300">
        <a href="javascript:showElement('metrouusorLinks');" class="Show1300"><b>Site-urile „MetrouUșor” &#x2935;</b></a>
        <ul class="Shortcuts Hide1300" id="metrouusorLinks">
            <li><a href="https://metrouusor.com" target="_blank">Asociația „Metrou Ușor”</a></li>
            <li><a href="https://www.facebook.com/MetrouUsor/" target="_blank">Facebook</a></li>
            <li><a href="https://youtube.com/channel/UCczAlitk6NaUjQsbtCSdEjA" target="_blank">Youtube</a></li>
            <li><a href="https://www.facebook.com/InitiativaMTB/" target="_blank">Inițiativa pentru Muzeul transportului bucureștean</a></li>
            <li><a href="https://metrouusor.com/index.php/implica-te/directoneaza-2-din-impozit" target="_blank">2% pentru Asociația „Metrou Ușor”</a></li>
        </ul>
        <center>
            @{
                var pmCount = 0;
                var displayedBox = false;
                if ((currentUser?.UserId ?? 1) > 1)
                {
                    pmCount = await _userService.UnreadPMs(currentUser.UserId);
                }

                if (pmCount > 0)
                {
                    <span class="Unread" style="margin:5px; padding:5px; font-size:1.2em">
                        <a asp-page="/PrivateMessages" asp-route-Show="Inbox">@pmCount mesaj@(pmCount > 1 ? "e" : "") privat@(pmCount > 1 ? "e" : "") necitit@(pmCount > 1 ? "e" : "")</a>
                    </span>
                    displayedBox = true;
                }

                if (await _userService.IsUserModeratorInForum(currentUser, 0))
                {
                    var reports = await (
                        from r in _context.PhpbbReports.AsNoTracking()
                        where r.ReportClosed == 0
                        join rr in _context.PhpbbReportsReasons
                        on r.ReasonId equals rr.ReasonId
                        into joinedReasons
                        from jr in joinedReasons
                        orderby r.ReportTime descending
                        select new { r.PostId, jr.ReasonTitle }
                    ).ToListAsync();
                    if (reports.Any())
                    {
                        <div class="ReportedPost" style="margin:5px; padding:5px; width: max-content; max-width: 100%">
                            <h4>Rapoarte deschise</h4>
                            @foreach (var r in reports)
                            {
                                <a asp-page="ViewTopic" asp-page-handler="byPostId" asp-route-postId="@r.PostId">@r.ReasonTitle</a> <br />
                            }
                        </div>
                        displayedBox = true;
                    }
                }

                if (!displayedBox)
                {
                    <p>&nbsp;</p>
                }
            }
        </center>
        @RenderBody()
    </div>
    <center style="color:white;">
        <p>&nbsp;</p>
        <p>&copy; 2009 - @DateTime.UtcNow.Year <a href="https://metrouusor.com" style="color:white; text-decoration:underline">Asociația „Metrou Ușor”</a></p>
        <p><a asp-page="/TermsAndConditions" style="color:white; text-decoration:underline">Termenele și condițiile de utilizare</a></p>
        @if (await _userService.IsUserAdminInForum(currentUser, 0))
        {
            <p><a asp-page="./Admin" style="color:white; text-decoration:underline">Panoul administratorului</a></p>
        }
    </center>
    <environment include="Development">
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
    </environment>
    <environment exclude="Development">
        <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-2.2.0.min.js"
                asp-fallback-src="~/lib/jquery/dist/jquery.min.js"
                asp-fallback-test="window.jQuery"
                crossorigin="anonymous"
                integrity="sha384-K+ctZQ+LL8q6tP7I94W+qzQsfRV2a+AfHIi9k8z8l9ggpc8X+Ytst4yBo/hH+8Fk">
        </script>
        <script src="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.7/bootstrap.min.js"
                asp-fallback-src="~/lib/bootstrap/dist/js/bootstrap.min.js"
                asp-fallback-test="window.jQuery && window.jQuery.fn && window.jQuery.fn.modal"
                crossorigin="anonymous"
                integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa">
        </script>
        <script src="~/js/site.min.js" asp-append-version="true"></script>
    </environment>

    @RenderSection("Scripts", required: false)

    <script src="https://cdn.jsdelivr.net/npm/cookieconsent@3/build/cookieconsent.min.js" data-cfasync="false"></script>
    <script>
        window.cookieconsent.initialise({
            "palette": {
                "popup": {
                    "background": "#edeff5",
                    "text": "#838391"
                },
                "button": {
                    "background": "#4b81e8"
                }
            },
            "showLink": true,
            "theme": "edgeless",
            "content": {
                "message": "Acest site folosește cookie-uri pentru personalizarea conținutului afișat, autentificare și altele. Prin utilizarea site-ului nostru acceptați folosirea acestora.",
                "dismiss": "Am înțeles",
                "link": "Află mai multe",
                "href": "./AboutCookies"
            }
        });
    </script>
</body>
</html>
