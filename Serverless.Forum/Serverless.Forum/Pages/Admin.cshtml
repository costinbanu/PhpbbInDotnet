@page
@model Serverless.Forum.Pages.AdminModel
@{
    ViewData["Title"] = "Admin";
    Layout = "~/Pages/_Layout.cshtml";
}

<h2>Panoul administratorului</h2>

<style>
    .tab {
        overflow: hidden;
        border: 1px solid #ccc;
        background-color: #f1f1f1;
    }

    .tab button {
        background-color: inherit;
        float: left;
        border: none;
        outline: none;
        cursor: pointer;
        padding: 14px 16px;
        transition: 0.3s;
        font-size: 17px;
    }

    .tab button:hover {
        background-color: #ddd;
    }

    .tab button.active {
        background-color: #ccc;
    }

    .tabcontent {
        display: none;
        padding: 6px 12px;
        border: 1px solid #ccc;
        border-top: none;
    }
</style>

<div class="tab">
    <button class="tablinks active" onclick="openCity(event, 'Users')">Administrare utilizatori</button>
    <button class="tablinks" onclick="openCity(event, 'Forums')">Administrare forumuri</button>
    <button class="tablinks" onclick="openCity(event, 'Logs')">Administrare loguri</button>
</div>

<div id="Users" class="tabcontent" style="display:inherit">
    @await  Html.PartialAsync(
            "_AdminUsersPartial",
            new CustomPartials._AdminUsersPartialModel(Model.Config, Model.Utils, (await Model.GetCurrentUserAsync()).UserDateFormat),
            ViewData
        )
</div>

<div id="Forums" class="tabcontent">
    @await  Html.PartialAsync(
        "_AdminForumsPartial",
        new CustomPartials._AdminForumsPartialModel(),
        ViewData
    )
</div>

<div id="Logs" class="tabcontent">
    @await  Html.PartialAsync(
        "_AdminLogsPartial",
        new CustomPartials._AdminLogsPartialModel(),
        ViewData
    )
</div>

<script>
    function openCity(evt, tabName) {
        var i, tabcontent, tablinks;
        tabcontent = document.getElementsByClassName("tabcontent");
        for (i = 0; i < tabcontent.length; i++) {
            tabcontent[i].style.display = "none";
        }
        tablinks = document.getElementsByClassName("tablinks");
        for (i = 0; i < tablinks.length; i++) {
            tablinks[i].className = tablinks[i].className.replace(" active", "");
        }
        document.getElementById(tabName).style.display = "block";
        evt.currentTarget.className += " active";
    }
</script>