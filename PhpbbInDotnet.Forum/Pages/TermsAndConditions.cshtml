@page

@using Microsoft.Extensions.Configuration
@inject IConfiguration _config
@inject Languages.ITranslationProvider _translationProvider

@{
    var lang = _translationProvider.GetLanguage();
    ViewData["Title"] = _translationProvider.BasicText[lang, "TERMS", Domain.Casing.Title];
    Layout = "~/Pages/_Layout.cshtml";
}

@Html.Raw(string.Format(_translationProvider.TermsAndConditions[lang]!, _config.GetValue<string>("ForumName"), _config.GetValue<string>("AdminEmail")))


