@model PhpbbInDotnet.Forum.Pages.ForumLoginModel

<h3>Conectare Forum - @Model.ForumName</h3>
<form method="post">
    <input type="hidden" asp-for="ReturnUrl" />
    <input type="hidden" asp-for="ForumId" />
    <input type="password" asp-for="Password" placeholder="Parola forum" />
    <p></p>
    <input type="submit" value="Login" class="MyButton" />
    @Html.AntiForgeryToken()
</form>
<span class="validation" asp-validation-for="Password"></span>