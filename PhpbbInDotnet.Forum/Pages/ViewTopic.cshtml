    @Html.Raw($"{Model.PostCount} {(Model.PostCount != 1 ? Model.LanguageProvider.BasicText[Lang, "POSTS"] : Model.LanguageProvider.BasicText[Lang, "POST"])}, {Model.ViewCount} {(Model.ViewCount != 1 ? Model.LanguageProvider.BasicText[Lang, "VIEWS"] : Model.LanguageProvider.BasicText[Lang, "VIEW"])}")
