        <h4 style="float:left">@Html.Raw(Model.LanguageProvider.BasicText[Lang, "DO_REPORT"])</h4>
        <div style="float:right; cursor:pointer; font-weight:bold" onclick="showElement('report')">@Html.Raw(Model.LanguageProvider.BasicText[Lang, "CLOSE_BUTTON"])</div>
        <p>&nbsp;</p>
        <p>&nbsp;</p>
        <div>
            <div class="FlexCenter">
                <div style="font-weight:bold; text-align: right">@Html.Raw(Model.LanguageProvider.BasicText[Lang, "REASON", Casing.FirstUpper])</div>
                <div class="FlexRight PostInputWidth">
                    @{
                        var reasons = new List<SelectListItem> { new SelectListItem(Model.LanguageProvider.BasicText[Lang, "CHOOSE_REASON"], "-1", true, true) };
